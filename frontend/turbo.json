{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "codegen"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", "build/**", ".next/**", "!.next/cache/**"]
    },
    "codegen": {
      "cache": true,
      "inputs": ["panda.config.*"],
      "outputs": ["styled-system/**"]
    },
    "check-types": {
      "dependsOn": ["^build", "codegen"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["codegen"]
    },
    "fix": {
      "cache": false
    },
    "generate": {
      "cache": false,
      "outputs": ["*.ts"]
    },
    "test": {
      "dependsOn": ["^build", "codegen"]
    }
  }
}
